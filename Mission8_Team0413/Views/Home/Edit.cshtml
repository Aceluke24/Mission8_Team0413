@model Mission8_Team0413.Models.Task
@{
    ViewData["Title"] = "Edit Task";
    Layout = "_Layout";
}

<h1 class="mb-3">Edit Task</h1>

<div class="row">
    <div class="col-lg-10 col-xl-8">

        <!-- Correct, well-formed form tag helper -->
        <form asp-controller="Home" asp-action="Edit" method="post" class="needs-validation" novalidate>
            @Html.AntiForgeryToken()

            <!-- Keep the PK so the controller knows which entity to update -->
            <input type="hidden" asp-for="TaskId" />

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            @await Html.PartialAsync("_TaskFields", Model)

            <div class="mt-3 d-flex gap-2">
                <button type="submit" class="btn btn-primary">Save Changes</button>
                <a class="btn btn-outline-secondary"
                   asp-controller="Task"
                   asp-action="Quadrants">Cancel</a>
            </div>
        </form>

    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}