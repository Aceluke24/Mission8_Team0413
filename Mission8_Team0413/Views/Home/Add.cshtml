@model Mission8_Team0413.Models.Task

@{
    ViewData["Title"] = "Add Task";
}

<div class="container mt-4">
    <h2 class="text-center mb-4">Add Task</h2>

    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-body">
                    <form asp-controller="Home" asp-action="Add" method="post">
                        <input type="hidden" asp-for="TaskId" />

                        <div class="mb-3">
                            <label class="form-label">Task Description</label>
                            <input asp-for="TaskDescription" class="form-control" />
                            <span asp-validation-for="TaskDescription" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Due Date</label>
                            <input asp-for="DueDate" type="date" class="form-control" />
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Quadrant</label>
                            <select asp-for="Quadrant" class="form-control">
                                <option value="1">Quadrant 1 - Important / Urgent</option>
                                <option value="2">Quadrant 2 - Important / Not Urgent</option>
                                <option value="3">Quadrant 3 - Not Important / Urgent</option>
                                <option value="4">Quadrant 4 - Not Important / Not Urgent</option>
                            </select>
                            <span asp-validation-for="Quadrant" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Category</label>
                            <select asp-for="CategoryId" class="form-control">
                                @foreach (var c in ViewBag.Categories)
                                {
                                    <option value="@c.CategoryId">@c.CategoryName</option>
                                }
                            </select>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Completed</label>
                            <select asp-for="Completed" class="form-control">
                                <option value="false">False</option>
                                <option value="true">True</option>
                            </select>
                        </div>

                        <div class="mt-3 d-flex gap-2">
                            <button type="submit" class="btn btn-primary">Save Task</button>
                            <a class="btn btn-outline-secondary" asp-controller="Home" asp-action="QuadrantsView">Cancel</a>
                        </div>

                    </form>
                </div>
            </div>
        </div>
    </div>
</div>