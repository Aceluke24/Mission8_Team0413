@model IEnumerable<Mission8_Team0413.Models.Task>

@{
    ViewData["Title"] = "Time Management Matrix";
}

<div class="container mt-4">
    <h2 class="text-center mb-4">Quadrant View</h2>
    
    
    <div class="row">
        <!-- Top Left -->
        <div class="col-md-6 mb-4">
            <div class="card text-center h-100">
                <div class="card-body">
                    @foreach (var a in Model.Where(t => t.Quadrant == 1 && t.Completed == false))
                    {
                        <p>@a.TaskDescription</p>
                        <p>@a.DueDate</p>
                        <p>@a.Category.CategoryName</p>
                        <p>@a.Completed</p>
                        <a class="btn btn-info" asp-controller="Home" asp-action="Edit" asp-route-taskId="@a.TaskId">Edit</a>
                        <a class="btn btn-danger" asp-controller="Home" asp-action="Delete" asp-route-taskId="@a.TaskId">Delete</a>
                    }
                </div>
            </div>
        </div>

